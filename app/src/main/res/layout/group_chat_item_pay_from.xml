<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:paddingLeft="25dp"
    android:paddingRight="0dp">


    <ImageButton
        android:id="@+id/btn_replay_pay_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_reply" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_to">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"

                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_priceFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1.9"
                        android:gravity="right|center"
                        android:text="قیمت"
                        android:textColor="#cb5958" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.1"
                        android:gravity="right|center"
                        android:text="قیمت"
                        android:textColor="#cb5958"
                        android:id="@+id/textView3"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_description_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:text="توضیحات:بابت دنگ مسافرت شمال" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp">
                    <TextView
                        android:id="@+id/txt_status_payed_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/text_background"
                        android:gravity="right"
                        android:text="درخواست شد"
                        android:textColor="#FFFFFF" />
                    <ImageView
                        android:id="@+id/requestUserAvatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pic_profile"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txt_date"
                    android:text="2016-16-16"
                    android:textColor="#78c118"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="center"/>
                <Button
                    android:layout_width="match_parent"
                    android:alpha="0.6"
                    android:id="@+id/btn_cancel_pay"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/btn_cancel_from_background"
                    android:text="@string/cancel_payment"
                    android:layout_height="40dp"/>
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_clock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:gravity="center|bottom"
            android:paddingBottom="5dp"
            android:layout_marginRight="-25dp"
            android:drawableTop="@drawable/ic_time_little"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_clock_text_background"
            android:text="12:58"/>
    </RelativeLayout>
</LinearLayout>