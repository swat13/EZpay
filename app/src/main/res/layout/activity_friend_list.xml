<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".LoginActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:fitsSystemWindows="false"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/greenToolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:src="@drawable/ic_back_arrow"/>

                <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:src="@drawable/ic_search"/>

                <ImageButton
                    android:id="@+id/btn_radar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:src="@drawable/ic_radar"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="right|center"
                    android:padding="10dp"
                    android:text="@string/contact_list"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:background="#e7e8da">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/invite_friends"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:foreground="?selectableItemBackground"
            android:clickable="true"
            app:cardBackgroundColor="#edede1"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invite_friends"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/add_contact_image"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/contact_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/invite_friends"/>


        <LinearLayout
            android:id="@+id/btm_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@drawable/shadow_bottom_menu"/>


            <LinearLayout
                android:id="@+id/bottom_action_layout"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="#eceff1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:padding="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:onClick="onClick">

                    <Button
                        android:id="@+id/report_list5"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:clickable="false"
                        android:background="@drawable/radar"
                        android:layout_marginBottom="2dp"
                        />

                    <TextView
                        android:id="@+id/accounting_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:text="پروفایل"
                        android:textColor="#a0817f"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/friends_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:padding="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:onClick="onClick">

                    <Button
                        android:id="@+id/report_list4"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:clickable="false"
                        android:background="@drawable/group"
                        android:layout_marginBottom="2dp"

                        />

                    <TextView
                        android:id="@+id/adsl_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:text="دوستان"
                        android:textColor="#a0817f" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/barcode_reader"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:clickable="true">

                    <Button
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:clickable="false"
                        android:background="@drawable/barcode"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="بارکدخوان"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:clickable="false"
                        android:textColor="#a0817f" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/barcode_reader2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:padding="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:onClick="onClick">

                    <Button
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:clickable="false"
                        android:background="@drawable/radar"
                        android:layout_marginBottom="2dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="بارکدخوان"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:textColor="#a0817f" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rss_feed"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:padding="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:onClick="onClick">

                    <Button
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:clickable="false"
                        android:background="@drawable/feed"
                        android:layout_marginBottom="2dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="خوراک"
                        android:textSize="10dp"
                        android:clickable="false"
                        android:textStyle="bold"
                        android:textColor="#a0817f" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
